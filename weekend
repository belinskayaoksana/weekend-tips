    const wishes = [
      "–ù–µ—Ö–∞–π —Ü—ñ –≤–∏—Ö—ñ–¥–Ω—ñ –±—É–¥—É—Ç—å –±–µ–∑ –±—É–¥–∏–ª—å–Ω–∏–∫—ñ–≤, –∞–ª–µ –∑ –ø—Ä–∏—î–º–Ω–∏–º–∏ —Å—é—Ä–ø—Ä–∏–∑–∞–º–∏ ‚òïÔ∏è",
      "–ë–∞–∂–∞—é —Ç–æ–±—ñ –≤–∏—Ö—ñ–¥–Ω–∏—Ö –±–µ–∑ –≤—ñ–¥—á—É—Ç—Ç—è –ø—Ä–æ–≤–∏–Ω–∏ –∑–∞ –≤—ñ–¥–ø–æ—á–∏–Ω–æ–∫ ‚Äî —Ç–∏ –π–æ–≥–æ –∑–∞—Å–ª—É–≥–æ–≤—É—î—à üíõ",
      "–ù–µ—Ö–∞–π —É —Ç–≤–æ—ó –ø–ª–∞–Ω–∏ –Ω–∞ —Ü—ñ –≤–∏—Ö—ñ–¥–Ω—ñ –æ–±–æ–≤ º—è–∑–∫–æ–≤–æ —É–≤—ñ–π–¥–µ —Å–º—ñ—Ö, —Ç–µ–ø–ª–∏–π –ø–ª–µ–¥ —ñ —â–æ—Å—å —Å–º–∞—á–Ω–µ ü•ê",
      "–•–∞–π –≤–∏—Ö—ñ–¥–Ω—ñ –ø–æ–¥–∞—Ä—É—é—Ç—å —Ä–æ–∑–º–æ–≤—É, –ø—ñ—Å–ª—è —è–∫–æ—ó —Å—Ç–∞–Ω–µ –ª–µ–≥—à–µ –¥–∏—Ö–∞—Ç–∏ üåø",
      "–ë–∞–∂–∞—é –∑–Ω–∞–π—Ç–∏ —á–∞—Å –Ω–∞ —Ç–µ, —â–æ –∂–∏–≤–∏—Ç—å, –∞ –Ω–µ –≤–∏—Å–Ω–∞–∂—É—î: —Å–æ–Ω, –ø—Ä–æ–≥—É–ª—è–Ω–∫—É, —Ç–∏—à—É, —É–ª—é–±–ª–µ–Ω–∏—Ö –ª—é–¥–µ–π üåô",
      "–ù–µ—Ö–∞–π —É —Ü—ñ –≤–∏—Ö—ñ–¥–Ω—ñ –±—É–¥–µ —Ö–æ—á –æ–¥–Ω–∞ –º–∞–ª–µ–Ω—å–∫–∞ –ø—Ä–∏–≥–æ–¥–∞, –ø—Ä–æ —è–∫—É –∑–∞—Ö–æ—á–µ—Ç—å—Å—è –∑–≥–∞–¥–∞—Ç–∏ –ø–æ—Ç—ñ–º ‚ú®",
      "–•–∞–π —Ç–≤—ñ–π –≥–æ–ª–æ–≤–Ω–∏–π –¥–µ–¥–ª–∞–π–Ω —Ü–∏—Ö –≤–∏—Ö—ñ–¥–Ω–∏—Ö ‚Äî –≤—á–∞—Å–Ω–æ –≤–∏–º–∫–Ω—É—Ç–∏ –≥–æ–ª–æ–≤—É –≤—ñ–¥ —Ä–æ–±–æ—á–∏—Ö –¥—É–º–æ–∫ üß†üö´",
      "–ë–∞–∂–∞—é —Ç–æ–±—ñ –≤–∏—Ö—ñ–¥–Ω–∏—Ö, –ø—ñ—Å–ª—è —è–∫–∏—Ö –Ω–µ –ø–æ—Ç—Ä—ñ–±–Ω—ñ —â–µ –≤–∏—Ö—ñ–¥–Ω—ñ üòÑ",
      "–ù–µ—Ö–∞–π —Ü—ñ –¥–≤–∞ –¥–Ω—ñ –±—É–¥—É—Ç—å –Ω–µ –ø—Ä–æ ¬´–≤—Å—Ç–∏–≥–Ω—É—Ç–∏ –≤—Å–µ¬ª, –∞ –ø—Ä–æ ¬´–¥–æ–∑–≤–æ–ª–∏—Ç–∏ —Å–æ–±—ñ –±—É—Ç–∏¬ª üí´",
      "–•–∞–π –≤—Å–µ—Å–≤—ñ—Ç –Ω–∞–¥—ñ—à–ª–µ —Ç–æ–±—ñ —É –≤–∏—Ö—ñ–¥–Ω—ñ –æ–¥–∏–Ω –º–∞–ª–µ–Ω—å–∫–∏–π, –∞–ª–µ –¥—É–∂–µ —Ç–æ—á–Ω–∏–π –∑–Ω–∞–∫, —â–æ —Ç–∏ –Ω–∞ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–º—É —à–ª—è—Ö—É ‚≠êÔ∏è",
      "–ù–µ—Ö–∞–π —É —Ç–µ–±–µ –∑–Ω–∞–π–¥–µ—Ç—å—Å—è —á–∞—Å –ø—Ä–æ—Å—Ç–æ –ø–æ—Å–∏–¥—ñ—Ç–∏ –∑ —á–∞—à–∫–æ—é —á–æ–≥–æ—Å—å —Ç–µ–ø–ª–æ–≥–æ —ñ –Ω—ñ –ø—Ä–æ —â–æ –Ω–µ –¥—É–º–∞—Ç–∏ ‚òïÔ∏è",
      "–ë–∞–∂–∞—é –≤–∏—Ö—ñ–¥–Ω–∏—Ö, –¥–µ —î –±–∞–ª–∞–Ω—Å: —Ç—Ä—ñ—à–∫–∏ –∫–æ—Ä–∏—Å–Ω–æ–≥–æ, —Ç—Ä—ñ—à–∫–∏ –ª–µ–¥–∞—á–æ–≥–æ –π –±–∞–≥–∞—Ç–æ –ø—Ä–∏—î–º–Ω–æ–≥–æ ‚öñÔ∏è",
      "–ù–µ—Ö–∞–π —Ü—ñ –≤–∏—Ö—ñ–¥–Ω—ñ –ø–æ–≤–µ—Ä–Ω—É—Ç—å —Ç–æ–±—ñ –≤—ñ–¥—á—É—Ç—Ç—è –ª–µ–≥–∫–æ—Å—Ç—ñ –π —Ä–∞–¥–æ—Å—Ç—ñ –≤—ñ–¥ –¥—Ä—ñ–±–Ω–∏—Ü—å üåà",
      "–•–∞–π —Ç–≤–æ—è —Å—É–±–æ—Ç–∞ –±—É–¥–µ –ø—Ä–æ –Ω–∞—Ç—Ö–Ω–µ–Ω–Ω—è, –∞ –Ω–µ–¥—ñ–ª—è ‚Äî –ø—Ä–æ —Å–ø–æ–∫—ñ–π —ñ –∑–∞—Ä—è–¥ –Ω–∞ –Ω–æ–≤–∏–π —Ç–∏–∂–¥–µ–Ω—å üîã",
      "–ë–∞–∂–∞—é —Ç–æ–±—ñ –∑—É—Å—Ç—Ä—ñ—Ç–∏ —É —Ü—ñ –≤–∏—Ö—ñ–¥–Ω—ñ –º–æ–º–µ–Ω—Ç, –∫–æ–ª–∏ –∑–∞—Ö–æ—á–µ—Ç—å—Å—è —Å–∫–∞–∑–∞—Ç–∏: ¬´–û—Å—å –∑–∞—Ä–∞–¥–∏ —Ü—å–æ–≥–æ –≤–∞—Ä—Ç–æ –±—É–ª–æ –≤—ñ–¥–ø–æ—á–∏—Ç–∏¬ª ü§ç"
    ];

    const wishTextEl = document.getElementById("wishText");
    const btn = document.getElementById("generateBtn");
    const counterLabel = document.getElementById("counterLabel");
    const dayLabel = document.getElementById("dayLabel");

    let shownCount = 0;
    let lastIndex = -1;

    function updateDayLabel() {
      const today = new Date();
      const day = today.getDay(); // 0 = –Ω–µ–¥—ñ–ª—è, 6 = —Å—É–±–æ—Ç–∞

      if (day === 5) {
        dayLabel.textContent = "–ü º—è—Ç–Ω–∏—Ü—è ‚Äî —á–∞—Å –ø–ª–∞–Ω—É–≤–∞—Ç–∏ –≤—ñ–¥–ø–æ—á–∏–Ω–æ–∫ üéâ";
      } else if (day === 6 || day === 0) {
        dayLabel.textContent = "–í–∏—Ö—ñ–¥–Ω—ñ –≤–∂–µ —Ç—É—Ç üòå";
      } else {
        dayLabel.textContent = "–ú–æ–∂–Ω–∞ –ø–ª–∞–Ω—É–≤–∞—Ç–∏ –º–∞–ª–µ–Ω—å–∫—É –Ω–∞–≥–æ—Ä–æ–¥—É –Ω–∞ –≤–∏—Ö—ñ–¥–Ω—ñ üåü";
      }
    }

    function getRandomWishIndex() {
      if (wishes.length === 1) return 0;
      let idx;
      do {
        idx = Math.floor(Math.random() * wishes.length);
      } while (idx === lastIndex);
      lastIndex = idx;
      return idx;
    }

    function showRandomWish() {
      const idx = getRandomWishIndex();
      const wish = wishes[idx];
      wishTextEl.textContent = wish;
      shownCount += 1;
      counterLabel.textContent = `${shownCount} –ø–æ–±–∞–∂–∞–Ω–Ω${shownCount === 1 ? "—è" : "—å"} –ø–æ–∫–∞–∑–∞–Ω–æ`;
    }

    btn.addEventListener("click", showRandomWish);
    updateDayLabel();
  </script>
